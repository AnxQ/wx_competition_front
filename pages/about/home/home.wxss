/* pages/about/home/home.wxss */
.UCenter-bg {
  background-image: var(--gradualBlue);
  background-size: cover;
  height: 350rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-avatar {
  border-radius: 20rpx;
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg text.text-name {
  opacity: 1;
}


.UCenter-bg image {
  width: 180rpx;
  height: 180rpx;

}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

